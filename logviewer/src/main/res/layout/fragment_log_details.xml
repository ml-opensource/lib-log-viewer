<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/logDetailsToolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:gravity="end"
        android:layout_height="wrap_content">

        <ImageButton
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_share_white_24dp"
            android:id="@+id/logDetailsShareBtn"
            android:layout_width="wrap_content"
            android:padding="16dp"
            android:layout_height="wrap_content"
            android:text="@string/action_share"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/logDetailsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.nodesagency.logviewer.screens.logdetails.views.LogDetailsView
        android:id="@+id/logDetailsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
